{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@entities/*": ["src/data/entities/*"],
      "@schemas/*": ["src/data/schemas/*"],
      "@enums/*": ["src/data/enums/*"],
      "@adminEnums/*": ["src/data/enums/admin/enums/*"],
      "@loaders/*": ["src/data/loaders/*"]
    },
    "skipLibCheck": true,
  }
}
